<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


   	<!-- set color style -->
   	<LinearLayout
   	    android:id="@+id/setStyle" 
   	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:gravity="center"
	    android:paddingLeft="5dp"
	    android:orientation="horizontal" > 
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@+drawable/ic_color_a" 
        android:contentDescription="style"/>    
	<TextView 
		 android:id="@+id/TextViewStyleTitle" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content" 
		 android:layout_weight="2"
		 android:paddingLeft="5dp"
		 android:text="@string/config_set_style_title" 
		 android:textStyle="normal"
		 android:textSize="18sp"/>
	<TextView 
		 android:id="@+id/TextViewStyleSetting" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content"
		 android:layout_weight="1"
		 android:background="@drawable/rounded_edges"  
		 android:textStyle="normal"
		 android:textSize="18sp"
         android:layout_margin="2dp"
         android:gravity="center"
         android:padding="5dp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
	
    <!-- set take picture confirmation option-->
   	<LinearLayout
   	    android:id="@+id/takePictureOption"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@android:drawable/ic_menu_camera" 
        android:contentDescription="takePictureConfirmationOption"/>   
    <TextView 
		 android:id="@+id/TakePictureOptionTitle" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content"
		 android:layout_weight="1"
		 android:text="@+string/config_confirm_taken_picture" 
		 android:textStyle="normal"
		 android:paddingLeft="5dp"
		 android:textSize="18sp"/>
	<TextView 
		 android:id="@+id/TakePictureOptionSetting" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content" 
		 android:layout_weight="1"
		 android:textStyle="normal"
		 android:textSize="18sp"
		 android:padding="5dp"
         android:gravity="center"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
	    
    <!-- set Delete warning -->
   	<LinearLayout
   	    android:id="@+id/deleteWarn" 
   	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:paddingLeft="5dp"
	    android:gravity="center"
	    android:orientation="horizontal" > 
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@+drawable/ic_dialog_alert_holo_light" 
        android:contentDescription="style"/>  
    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="@+string/config_delete_warning" 
        android:paddingLeft="5dp"
        android:gravity="center_vertical" />
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
    
    <!-- set vibration time length-->
   	<LinearLayout
   	    android:id="@+id/vibrationSetting"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@+drawable/ic_lock_silent_mode_vibrate" 
        android:contentDescription="style"/>   
    <TextView 
		 android:id="@+id/TextViewVibrationTitle" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content"
		 android:layout_weight="1"
		 android:text="@string/config_set_vibration_title" 
		 android:textStyle="normal"
		 android:paddingLeft="5dp"
		 android:textSize="18sp"/>
	<TextView 
		 android:id="@+id/TextViewVibrationSetting" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content" 
		 android:layout_weight="1"
		 android:textStyle="normal"
		 android:textSize="18sp"
		 android:padding="5dp"
         android:gravity="center"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
	
	<!-- Export to SD Card -->
   	<LinearLayout
   	    android:id="@+id/exportToSdCard"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
	<ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@android:drawable/ic_menu_save" 
        android:contentDescription=""/>  
	<TextView 
		 android:layout_width="match_parent" 
		 android:layout_height="50dp" 
		 android:paddingLeft="5dp"
		 android:gravity="center_vertical" 
		 android:text="@string/config_export_SDCard_title" 
		 android:textStyle="normal"
		 android:textSize="18sp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
	
	<!-- Import from SD Card -->
	<LinearLayout
   	    android:id="@+id/importFmSdCard"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
	<ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@android:drawable/ic_menu_revert" 
        android:contentDescription="import"/>  
	<TextView 
		 android:layout_width="match_parent" 
		 android:layout_height="50dp" 
		 android:gravity="center_vertical" 
		 android:paddingLeft="5dp"
		 android:text="@string/config_import_SDCard_entry" 
		 android:textStyle="normal"
		 android:textSize="18sp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />
	
	<!-- Delete DB -->
   	<LinearLayout
   	    android:id="@+id/SetDeleteDB"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@+drawable/ic_delete" 
        android:contentDescription=""/>  
	<TextView 
		 android:layout_width="match_parent" 
		 android:layout_height="50dp"
		 android:gravity="center_vertical" 
		 android:paddingLeft="5dp"
		 android:text="@string/config_delete_DB_title" 
		 android:textStyle="normal"
		 android:textSize="18sp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />

    <!-- show licenses dialog-->
   	<LinearLayout
   	    android:id="@+id/showLicenses"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@android:drawable/ic_menu_compass" 
        android:contentDescription="Show licenses"/>   
    <TextView 
		 android:id="@+id/showLicensesText" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content"
		 android:layout_weight="1"
		 android:text="@string/config_open_source_licenses"
		 android:textStyle="normal"
		 android:paddingLeft="5dp"
		 android:textSize="18sp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />    
	
	<!-- show about dialog-->
   	<LinearLayout
   	    android:id="@+id/showAbout"
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
		android:paddingLeft="5dp"
   	    android:gravity="center"
	    android:orientation="horizontal" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:src="@android:drawable/ic_menu_info_details" 
        android:contentDescription="Show about"/>   
    <TextView 
		 android:id="@+id/showAbout1" 
		 android:layout_width="0dp" 
		 android:layout_height="wrap_content"
		 android:layout_weight="1"
		 android:text="@string/config_about" 
		 android:textStyle="normal"
		 android:paddingLeft="5dp"
		 android:textSize="18sp"/>
	</LinearLayout>
	<View android:layout_width="match_parent" android:layout_height="1dip" android:background="#4f4f4f" />    
	

	<!-- button -->
	<Button
	    android:id="@+id/btnConfig"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="@string/config_button_back" />

    </LinearLayout>
    
</ScrollView>
